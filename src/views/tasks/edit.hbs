<div class="row mt-4" >
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <div class="card-header mb-3 text-center">
                    Editar tarea
                </div>
                <form action="/tasks/update/{{task._id}}" method="post" class="text-center" >
                    <input type="text" name="title" value="{{task.title}}" class="form-control" autofocus>
                    <div class="form-group mt-4 mb-4">
                        <input type="text" name="description" value="{{task.description}}" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-success btn-block" >
                        Guardar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>